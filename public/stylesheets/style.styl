/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #de8642
background-color = #fff2e7

body
  font-family 'Georgia'
  background-color background-color
  color #444444

header
  .title
    font-family 'Quicksand'
    padding 20px 10px
    color #fff
    font-size 45px
    text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 0px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

nav
  background-color main-color
  ul
    text-align left
    border-bottom 1px
    solid #ccc
    list-style-type none
    padding 10px 10px
    
    li
      display inline
      
      a
        font-weight bold
        color #444444
        border 1px
        solid #ccc
        text-decoration none
        padding 10px 20px
        border-bottom none
        margin-right 5px
        margin-bottom 0px
        border-top-left-radius 15px
        border-top-right-radius 15px
        background-color #D0CABF
        
      a:visted
        color #5e9ca0
          
      a.current
        background-color background-color

      a:hover
        color #000
        background-color #fff2e7

.container
  width 900px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 600px

  p
    margin-bottom 20px

.sidebar
  float left
  width 300px

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

p
  line-height 1.8

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px
